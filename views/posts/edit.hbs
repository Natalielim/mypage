<div class="page edit-post">
  <form action="/users/{{username}}/" method="post">
    <h1>Edit Post</h1>

    <div>
      <input type="text" name="title" id="post-title" value="{{post.title}}">
      <input name="body" id="post-body" value="{{post.body}}">
    </div>

    <div>
      <button type="submit">Submit</button>
    </div>
  </form>
</div>
