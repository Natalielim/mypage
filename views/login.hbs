<form action="/login" method="post">
  <h1>Log in</h1>

  <div>
    <input type="text" name="username" id="user-username" placeholder="username">
  </div>

  <div>
    <input type="password" name="password" id="user-password" placeholder="password">
  </div>

  <div>
    <button type="submit">Submit</button>
  </div>
</form>
